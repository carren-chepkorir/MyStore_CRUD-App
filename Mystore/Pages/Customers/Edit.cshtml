@page
@model Mystore.Pages.Customers.EditModel
@{
}
<br />
<h1>Edit Client</h1>
@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong> @Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
<form method="POST">
    <input type="hidden" name="id" value="@Model.customerInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3  col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.customerInfo.name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3  col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.customerInfo.email" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3  col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.customerInfo.phone" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3  col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.customerInfo.address" />
        </div>
    </div>
    @if (Model.SuccessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.SuccessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" role="button" href="/">cancel</a>
        </div>
    </div>
</form>

